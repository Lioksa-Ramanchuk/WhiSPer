<?xml version="1.0" encoding="utf-8" ?>
<configuration>

	<appSettings>
		<add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
	</appSettings>
	<system.web>
		<compilation debug="true" />
	</system.web>
	<system.serviceModel>
		<services>
			<service name="WcfSimplex.Simplex">
				<endpoint address="" binding="basicHttpBinding" contract="WcfSimplex.ISimplex">
					<identity>
						<dns value="localhost" />
					</identity>
				</endpoint>
				<endpoint address=""
						  binding="netTcpBinding"
						  contract="WcfSimplex.ISimplex" />
				<endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8105/WcfSimplex/" />
						<add baseAddress="net.tcp://localhost:8005/WcfSimplex"/>
					</baseAddresses>
				</host>
			</service>
		</services>
		<behaviors>
			<serviceBehaviors>
				<behavior>
					<serviceMetadata httpGetEnabled="True" httpsGetEnabled="True"/>
					<serviceDebug includeExceptionDetailInFaults="True" />
				</behavior>
			</serviceBehaviors>
		</behaviors>
	</system.serviceModel>

</configuration>
